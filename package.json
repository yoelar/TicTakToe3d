{
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "concurrently": "^8.2.0"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only backend/src/index.ts",
    "dev:all": "npx concurrently \"npm run dev\" \"npm --prefix frontend run dev\"",
    "test:e2e": "npx playwright test --config=frontend/playwright.config.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "express": "^5.1.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2"
  }
}
